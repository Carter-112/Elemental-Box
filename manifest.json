{
  "id": "com.elementalbox.app",
  "name": "ElementalBox",
  "short_name": "ElementalBox",
  "description": "A particle sandbox simulation game",
  "version": "1.2.0",
  "start_url": "/index.html",
  "scope": "/",
  "scope_extensions": [
    {
      "origin": "https://elementalbox.netlify.app"
    }
  ],
  "display": "standalone",
  "background_color": "#121212",
  "theme_color": "#00a8ff",
  "orientation": "any",
  "dir": "ltr",
  "lang": "en-US",
  "categories": ["games", "entertainment", "simulation"],
  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7",
  "prefer_related_applications": false,
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.elementalbox.app",
      "id": "com.elementalbox.app"
    }
  ],
  "screenshots": [
    {
      "src": "screenshots/screen1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Main game screen"
    },
    {
      "src": "screenshots/screen2.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Element selection screen"
    }
  ],
  "icons": [
    {
      "src": "icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icons/maskable-icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "icons/maskable-icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "launch_handler": {
    "client_mode": ["auto"]
  },
  
  "protocol_handlers": [
    {
      "protocol": "web+elementalbox",
      "url": "/index.html?experiment=%s"
    },
    {
      "protocol": "web+elemrecipe",
      "url": "/index.html?recipe=%s"
    }
  ],
  
  "share_target": {
    "action": "/share-target/",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  
  "shortcuts": [
    {
      "name": "New Simulation",
      "short_name": "New",
      "description": "Start a new particle simulation",
      "url": "/index.html?new=true",
      "icons": [{ "src": "icons/shortcut-new.png", "sizes": "96x96" }]
    },
    {
      "name": "Fire Elements",
      "short_name": "Fire",
      "description": "Jump to fire element category",
      "url": "/index.html?category=fire",
      "icons": [{ "src": "icons/shortcut-fire.png", "sizes": "96x96" }]
    },
    {
      "name": "Water Elements",
      "short_name": "Water",
      "description": "Jump to water element category",
      "url": "/index.html?category=water",
      "icons": [{ "src": "icons/shortcut-water.png", "sizes": "96x96" }]
    }
  ],
  
  "display_override": ["window-controls-overlay", "minimal-ui"],
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "file_handlers": [
    {
      "action": "/open-file",
      "accept": {
        "application/json": [".elembox"]
      }
    }
  ],
  
  "handle_links": "preferred",
  
  "widgets": [
    {
      "name": "ElementalBox Preview",
      "short_name": "Preview",
      "description": "Quick access to ElementalBox simulation",
      "tag": "preview",
      "ms_ac_template": "widgets/preview/template.json",
      "data": "widgets/preview/data.json",
      "screenshots": [
        {
          "src": "widgets/preview/screenshot.png",
          "sizes": "600x400",
          "label": "Widget preview"
        }
      ],
      "icons": [
        {
          "src": "icons/icon-192x192.png",
          "sizes": "192x192"
        }
      ],
      "auth": false,
      "update": 86400
    }
  ],
  "minimum_ui_width": 1024
} 